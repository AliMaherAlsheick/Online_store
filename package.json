{
    "name": "storefront_backend",
    "version": "0.1.0",
    "description": "a backend app for online strore front-end",
    "main": "server.ts",
    "scripts": {
        "start": "node dist/server.js",
        "migrate": "npx db-migrate up",
        "demigrate": "npx db-migrate down",
        "demigrateall": "npx db-migrate reset",
        "watch": "npx tsc --watch",
        "test": "ENVIRONMENT='test';npm run migrate;npx jasmine;npm run demigrateall",
        "build": "npx tsc",
        "startdev": "npx nodemon dist/server.js",
        "lint": "npx eslint --ignore-path .eslintignore ",
        "prettier": "npx prettier --config .prettierrc 'src/**/*.ts' --write"
    },
    "author": "Ali",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.0",
        "cors": "^2.8.5",
        "db-migrate": "^0.11.13",
        "db-migrate-pg": "^1.2.2",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.5.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.14",
        "@types/jasmine": "^4.3.0",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^18.11.9",
        "@types/pg": "^7.14.7",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.44.0",
        "@typescript-eslint/parser": "^5.44.0",
        "body-parser": "^1.20.1",
        "eslint": "^8.28.0",
        "jasmine": "^4.5.0",
        "jasmine-spec-reporter": "^7.0.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "supertest": "^6.3.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.9.4"
    }
}
